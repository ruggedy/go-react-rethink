{
	"compileOnSave": false,
	"buildOnSave": false,
	"compilerOptions": {
		"target": "es2015",
		"module": "es2015",
		"jsx": "react",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"removeComments": false,
		"sourceMap": false,
		"lib": ["es6", "es2015", "dom"],
		"noLib": false,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"inlineSourceMap": true,
		"noEmitHelpers": true
	},
	"exclude": [
        "typings/main",
        "typings/main.d.ts",
        "typings/browser",
        "typings/browser.d.ts",
        "build",
        "node_modules",
        ".vscode"
    ],
	"awesomeTypescriptLoaderOptions": {
		"useBabel": true,
		"useCache": true
	}
}